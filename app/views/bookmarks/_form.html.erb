<div class="row">
  <div class="col-md-8">
    <%= form_for [topic, bookmark] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "What do you want to call this bookmark?" %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.url_field :url, class: 'form-control', placeholder: "Enter Bookmark URL" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>